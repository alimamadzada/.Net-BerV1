@model IndexViewModel
<div class="gtco-container">
    <div class="row">
        <div class="col-md-12">
            <div class="owl-carousel owl-carousel-fullwidth">
                @foreach (ArchitectureImage item in Model.architectureImages)
                {
    <div class="item">
        <a href="#">
            <img src="images/@item.Path" alt="Free Website Template by FreeHTML5.co">
            <div class="slider-copy">
                <h2>@item.Text</h2>
            </div>
        </a>
    </div>}
            </div>
        </div>
    </div>
</div>

<div class="gtco-section">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 gtco-heading text-center">
                <h2>Work</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus placerat enim et urna sagittis, rhoncus euismod erat tincidunt. Donec tincidunt volutpat erat.</p>
            </div>
        </div>
        <div class="row">

            <div class="col-md-12">
                <div class="owl-carousel owl-carousel-carousel">
                    @foreach (Work item in Model.works)
                    {
        <div class="item">
            <div class="gtco-item">
                <a href="#"><img src="images/@item.Path" alt="" class="img-responsive"></a>
                <h2><a href="#">@item.Name</a></h2>
                <p class="role">@item.City</p>
            </div>
        </div>}
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END Work -->

<div class="gtco-section">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-6 gtco-news">
                <h2>News</h2>
                <ul>
                    @foreach (News item in Model.news)
                    {
        <li>
            <a href="#">
                <span class="post-date">@item.Date</span>
                <h3>@item.Title</h3>
                <p>@item.Content</p>
            </a>
        </li>}
                </ul>
                <p><a href="#" class="btn btn-sm btn-special">More News</a></p>
            </div>
            <!-- END News -->
            <div class="col-md-5 col-md-push-1 gtco-testimonials">
                <h2>Testimonials</h2>
                @foreach (Testimonials item in Model.testimonials)
                {

    <blockquote>
        <p>&ldquo;@item.Aphorism&ldquo;</p>
        <p class="author"><cite>&mdash; @item.Author</cite></p>
    </blockquote>}
            </div>
        </div>
    </div>
</div>
<!-- END  -->

<div class="gtco-section gto-features">
    <div class="gtco-container">
        <div class="row">
            @foreach (Feature item in Model.features)
            {
<div class="col-md-4">
    <div class="feature-left">
        <i class="@item.Icon"></i>
        <div class="copy">
            <h3>@item.Name</h3>
            <p>@item.Content</p>
            <p><a href="#" class="gtco-more">Learn more</a></p>
        </div>
    </div>
</div>}
        </div>
    </div>
</div>


@if (TempData["result"] != null && !string.IsNullOrEmpty(TempData["result"].ToString()))
{
<input type="hidden" value="@TempData["result"].ToString()" id="action-result" />
}